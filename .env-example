#############################################
# Environment Variables (.env.example)
# Copy to `.env.local` and fill the real values.
#############################################

# Base site URL (no trailing slash)
NEXT_PUBLIC_SITE_URL=your_site_url

# GitHub OAuth (Better Auth)
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Better Auth secret / app keys (adjust if library requires)
BETTER_AUTH_SECRET=replace_with_strong_random_string

# GitHub API for Projects
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# Giscus (GitHub Discussions)
NEXT_PUBLIC_GISCUS_REPO=owner/repo
NEXT_PUBLIC_GISCUS_REPO_ID=repo_id
NEXT_PUBLIC_GISCUS_CATEGORY=General
NEXT_PUBLIC_GISCUS_CATEGORY_ID=category_id
NEXT_PUBLIC_GISCUS_MAPPING=pathname
NEXT_PUBLIC_GISCUS_STRICT=0
NEXT_PUBLIC_GISCUS_REACTIONS_ENABLED=1
NEXT_PUBLIC_GISCUS_EMIT_METADATA=0
NEXT_PUBLIC_GISCUS_INPUT_POSITION=bottom
NEXT_PUBLIC_GISCUS_THEME=preferred_color_scheme
NEXT_PUBLIC_GISCUS_LANG=en

# Hashnode GraphQL API (optional for public content; token if needed for extended scope)
HASHNODE_API_TOKEN=your_hashnode_api_token_optional
NEXT_PUBLIC_HASHNODE_PUBLICATION_HOST=your_hashnode_publication_host

# Medium RSS feed (no key needed) â€“ keep for clarity
MEDIUM_USERNAME=your_medium_username
NEXT_PUBLIC_MEDIUM_USERNAME=your_medium_username

# Analytics / optional services (placeholders)
PLAUSIBLE_DOMAIN=your_plausible_domain
POSTHOG_KEY=your_posthog_key
POSTHOG_HOST=your_posthog_host

# Misc secrets placeholder
ENCRYPTION_KEY=replace_with_32_characters
